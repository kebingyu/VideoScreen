<?xml version="1.0" encoding="utf-8" ?> 

<component name="ProgressBar" extends="Rectangle">

    <interface>
        <field id="progress" type="integer" onChange="updateProgress"/>
        <field id="rectSize" type="intarray" onChange="updateRectSize"/>
    </interface>

    <script type="text/brightscript" uri="pkg:/components/scripts/ProgressBar.brs" />

    <children>
    
        <Rectangle
            id="trackRect"
            color="0x000000FF"
            translation="[0,0]" />

        <Rectangle
            id="fillRect"
            color="0x00FF00FF"
            width="0"
            translation="[0,0]" />
        
    </children>

</component>
